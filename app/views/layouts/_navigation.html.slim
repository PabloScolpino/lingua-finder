.navbar-fixed
  nav
    .nav-wrapper.z-depth-4
      = link_to 'Lingua finder', root_path(), class: 'brand-logo'
      ul.right.hide-on-med-and-down
        li
          = link_to 'https://github.com/PabloScolpino/LinguaFinder/wiki', target: :_blank
            | Documentacion

        li
          = link_to 'https://github.com/PabloScolpino/LinguaFinder', target: :_blank
            | Ver codigo en GitHub

        li class=(:active if current_page? about_us_path())
          = link_to 'Quienes Somos', about_us_path()

        - if user_signed_in?
          li
            = link_to "Cerrar Sesion #{current_user.name}", destroy_user_session_path(), class: 'blue darken-3', data: { cy: 'logout' }

  ul#slide-out.sidenav
    li
      = link_to 'https://github.com/PabloScolpino/LinguaFinder/wiki', target: :_blank
        | Documentacion

    li
      = link_to 'https://github.com/PabloScolpino/LinguaFinder', target: :_blank
        | Ver codigo en GitHub

    li class=(:active if current_page? about_us_path())
      = link_to 'Quienes Somos', about_us_path()

    - if user_signed_in?
      li
        = link_to "Cerrar Session #{current_user.name}", destroy_user_session_path(), class: 'blue darken-3', data: { cy: 'logout-mobile' }
  a.sidenav-trigger data-target='slide-out' href='#'
    i.material-icons menu
